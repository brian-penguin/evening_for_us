<!DOCTYPE html>
<html>
<head>
  <title>EveningForUs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
  <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Josefin+Sans' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="navbar navbar-default">
      <div class="container-fluid">
          <ul class="nav navbar-nav">
            <% if user_signed_in?%>
              <li>
                <%= link_to "Search", root_path %>
              </li>
              <li>
                <%= link_to 'Edit profile',edit_user_registration_path %>
              </li>
              <li>
                <%= link_to "Logout", destroy_user_session_path, method: :delete %>
              </li>
              <li>
                <%= link_to 'Add Mobile Number', new_number_path %>
              </li>
              <li>
                <%= link_to 'My Numbers', numbers_path %>
              </li>
            <% else %>
              <li>
                <%= link_to 'Login',new_user_session_path%>
              </li>
              <li>
                <%= link_to 'Sign Up', new_user_registration_path%>
              </li>
            <%end%>
          </ul>
      </div>
    </div>

    <p class="notice"><%= flash[:notice] %></p>
    <p class="alert"><%= flash[:alert] %></p>

    <%= yield %>
  </div>

</body>
</html>
